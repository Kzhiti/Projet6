<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>
            {% block title %}
                {% if title is defined %}{{title}}{% else %}SnowTricks{% endif %}
            {% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
        {% endblock %}
    </head>
    <body>
    {% block header %}
        <header>
            <h3>SnowTricks</h3>
            <nav class="head-nav">
                <a href="{{path('app_homepage_index')}}">Accueil</a>
                <a href="{{path('tricks')}}">Figure</a>
                {% if not app.user %}
                    <a href="{{path('app_login')}}">Connexion</a>
                    <a href="{{path('app_register')}}">Inscription</a>
                {% endif %}
                {% if app.user %}
                    <a href="{{path('profile', {'id':app.user.id})}}">Profil</a>
                    <a href="{{ path('app_logout') }}">Deconnexion</a>
                {% endif %}
            </nav>
        </header>
    {% endblock %}
            {% block content %}

            {% endblock %}


    {% block footer %}
        <footer>
            <div>
            </div>
        </footer>
    {% endblock %}
    {% block javascripts %}{% endblock %}
    </body>
</html>