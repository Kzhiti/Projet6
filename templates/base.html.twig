<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>
            {% block title %}
                {% if title is defined %}{{title}}{% else %}SnowTricks{% endif %}
            {% endblock %}
        </title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
            <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
            <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
            <script type="text/javascript" src="{{ asset('assets/js/script.js') }}"></script>
            <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
        {% endblock %}
    </head>
    <body>
    {% block header %}
        <header>
            <nav class="navbar navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">SnowTricks</a>
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{path('app_homepage_index')}}">Accueil</a>
                        </li>
                        {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('app_login')}}">Connexion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('app_register')}}">Inscription</a>
                            </li>
                        {% endif %}
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('add_tricks')}}">Ajouter une figure</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('profile', {'id':app.user.id})}}">Profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </header>
    {% endblock %}
            {% block content %}

            {% endblock %}


    {% block footer %}
        <footer>
            <div>
            </div>
        </footer>
    {% endblock %}
    {% block javascripts %}{% endblock %}
    </body>
</html>