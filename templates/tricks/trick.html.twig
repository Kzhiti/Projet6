{% extends 'base.html.twig' %}

    {% block content %}
        <div class="content">
            <h1 class="trick-name">{{ trick.nom }}</h1>
            <h2 class="trick-category">{{ trick.category }}</h2>
            <p class="trick-description">{{ trick.description }}</p>
            {% for comment in comments %}
                <div class="content-trick">
                    <p>{{ comment.author.nom}} {{ comment.author.prenom }}</p>
                    <p>{{ comment.description }}</p>
                    <p>{{ comment.createdAt|date("d/m/Y") }}</p>
                </div>
            {% endfor %}
            <h2>Commentaire</h2>
            {{ form(form) }}
        </div>
    {% endblock %}